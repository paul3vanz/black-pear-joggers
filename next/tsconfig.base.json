{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@black-pear-joggers/button": ["libs/button/src/index.ts"],
      "@black-pear-joggers/container": ["libs/container/src/index.ts"],
      "@black-pear-joggers/favicon": ["libs/favicon/src/index.ts"],
      "@black-pear-joggers/footer": ["libs/footer/src/index.ts"],
      "@black-pear-joggers/header": ["libs/header/src/index.ts"],
      "@black-pear-joggers/helpers": ["libs/helpers/src/index.ts"],
      "@black-pear-joggers/lazy-load-image": [
        "libs/lazy-load-image/src/index.ts"
      ],
      "@black-pear-joggers/search-bar": ["libs/search-bar/src/index.ts"],
      "@black-pear-joggers/stack": ["libs/stack/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
