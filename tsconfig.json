      "@black-pear-joggers/shared-components": ["libs/shared-components/src/index.ts"],
      "@black-pear-joggers/search": ["libs/search/src/index.ts"],
      "@black-pear-joggers/magic-mile-data-access": ["libs/magic-mile-data-access/src/index.ts"],
      "@black-pear-joggers/club-records-data-access": ["libs/club-records-data-access/src/index.ts"],
      "@black-pear-joggers/club-standards-data-access": ["libs/club-standards-data-access/src/index.ts"],
      "@black-pear-joggers/race-results-data-access": ["libs/race-results-data-access/src/index.ts"],
      "@black-pear-joggers/shared-pipes": ["libs/shared-pipes/src/index.ts"],
      "@black-pear-joggers/authentication": ["libs/authentication/src/index.ts"],
      "@black-pear-joggers/membership-data-access": ["libs/membership-data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
